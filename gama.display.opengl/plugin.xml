<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
    <extension
          point="gaml.extension">
    </extension>
    <extension
          point="org.eclipse.ui.views">
       <view
             allowMultiple="true"
             category="gama.category"
             class="gama.display.opengl.view.OpenGLDisplayView"
             icon="platform:/plugin/gama.ui.base/icons/view.display2.png"
             id="gama.view.OpenGLDisplayView"
             name="3D View"
             restorable="false">
       </view>
    </extension>    
    <extension
          point="org.eclipse.ui.services">
       <serviceFactory
             factoryClass="gama.display.opengl.view.OpenGLInitializer">
          <service
                serviceClass="gama.ui.base.interfaces.IOpenGLInitializer">
          </service>
       </serviceFactory>
    </extension>
    <extension
          point="gama.display">
       <implementation
             class="gama.display.opengl.view.SWTOpenGLDisplaySurface"
             keyword="opengl">
       </implementation>
    </extension>
</plugin>
